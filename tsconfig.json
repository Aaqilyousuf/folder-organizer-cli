{
  "compilerOptions": {
    "target": "ES2020", //Good modern Node.js support
    "module": "ES2022", //Use ESM style for compatibility with "type": "module"
    "lib": ["ES2020"], //Compatible lib
    "outDir": "dist", //Output folder
    "rootDir": "src", //Source folder
    "moduleResolution": "node", //Required for proper path resolution
    "esModuleInterop": true, //Allows CommonJS interop
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true
  },
  "include": ["src"]
}
